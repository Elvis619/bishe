page{
  background: rgb(241, 240, 240);
 }
 
.container-orderDetail{
  width: 100%;
  box-sizing: border-box;
  background: white;
  margin-top: 20px;

}

.base-info{
  box-sizing: border-box;
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.base-info .name{
  justify-self: flex-start;
  flex-grow: 1;
}

.base-info .stateStr{
    color: red;
}
.goodsInfo{
  box-sizing: border-box;
  padding: 10px;
  border-top: 1px solid #f4f4f4;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 12px;
}
.goodsInfo .coverImage{
  justify-self: flex-start;
  width: 50px;
  height: 50px;
  border-radius: 4px;
  box-shadow: 0 0 8px #c1c1c1;
  margin-right: 10px;
}
.goodsInfo .name{
  flex-grow: 1;
}
.goodsInfo .count{
  width: 10%;
  margin-right: 10px;

}

.goodsInfo .price{
  width: 20%;
  color: red;
  text-align: right;

}
.createTime{
  box-sizing: border-box;
  padding: 10px;
  border-top: 1px solid #f4f4f4;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
}
.container-calculate{
  box-sizing: border-box;
  padding: 10px;
  border-top: 1px solid #f4f4f4;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 14px;
  
}
.pay{
  padding: 5px 18px;
  border-radius: 4px;
  box-shadow: 0 0 5px #c1c1c1;
  background: red;
  color: #fff;
  font-size: 12px;
  text-align: center;
}

.container-calculate .name{
  font-size: 12px;
  margin-right: 10px;

}
.container-calculate .totalPrice{
  font-size: 14px;
  color: red;
  
}
.addressDetail{
  margin-top: 20px;
  width:100%;
  height:30px;
 
}