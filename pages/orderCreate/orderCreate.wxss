/* pages/orderCreate/orderCreate.wxss */
page{
  background: #f7f4f4;
}


.container-address{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 20px 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.icon-address{
  width: 25px;
  height: 25px;

}
.container-address .right{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  margin-left: 15px;
  font-size: 15px;
}
.container-address .right .phone{
  margin-left: 15px;
}
.arrow-right{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 10px;
  top: 27px;
}
.container-orderDetail{
  background: white;
}
.goodsInfo{
  box-sizing: border-box;
  padding: 10px;
  border-top: 1px solid #f4f4f4;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 12px;
}
.goodsInfo .coverImage{
  width: 30px;
  height: 30px;
  box-shadow:0 0 8px #c1c1c1;
  border-radius: 4px;
  margin-right: 10px;
  justify-self: flex-start;

}
.goodsInfo .name{
  flex:1;
}
.goodsInfo .count{
  margin-right: 20px;
  width: 10%;
}

.goodsInfo .price{
  width: 20%;
  color: red;
  text-align: right;
}
.container-calculate{
  box-sizing: border-box;
  padding: 10px;
  border-top: 1px solid #f4f4f4;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 12px;

}
.container-calculate .name{
  font-size: 12px;
  margin-right: 10px;
}
.container-calculate .totalPrice{
  color: red;
  font-size: 12px;
}
.container-bottom{
  height: 45px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  box-sizing: border-box;
  overflow: hidden;
}
.container-bottom .totalPrice{
  color: red;
  margin-left: 10px;
}
.container-bottom .buyBtn{
  line-height: 45px;
  display: inline-block;
  height: 45px;
  padding: 0 40px;
  background:  rgb(50, 185, 10);
  color: #fff;
}