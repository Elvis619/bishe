/* pages/home/home.wxss */
swiper-item,swiper-item image,swiper{
  width: 100%;
  height: 380rpx;

}
.title{
  height: 100rpx;
  color:orange;
  text-align: center;
  line-height: 100rpx; 
}
/* 精选特产1 */
.view_box1{
  width: 100%;
  /* display: flex; */
}
.image_top{
  display: flex;
  
  justify-content: space-between;
}
.image_top image{
  width: 100%;
  height: 375rpx;
  border-radius: 10rpx;
}
.image_buttom image{
  width: 100%;
  height: 500rpx;
}
/* 精选特产2 */
scroll-view{
  white-space: nowrap;/* 不换行 */
  height: 350rpx;
}
scroll-view view{
  width: 300rpx;
  height: 300rpx;
  display: inline-block; /* 使view变为行内元素 */
  border-radius: 10rpx;
  overflow: hidden; /*超出隐藏*/
  box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.4);
  text-align: center;
  margin: 0 10rpx;
}
scroll-view view text{
  display: block;
  color: #999;
}
scroll-view view image{
  width: 100%;
  height: 250rpx;
}
/* 新品上线 */
.newest_box{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.newest_box> view{
  border: 1px solid #f5f5f5;
  width: 48%;
  height: 400rpx;
  text-align: center;
  margin: 20rpx 0;
  border-radius: 10rpx;
  box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.2);
  
}
.newest_box view image{
  width: 100%;
  height: 300rpx;

}
.newest_box view view:nth-child(2){
  color: orange;
}
.newest_box view view:nth-child(3){
  color: red;
}